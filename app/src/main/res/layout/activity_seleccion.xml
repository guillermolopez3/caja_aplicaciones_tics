<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gru.cajaaplicacionestics.view.SeleccionActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_gral"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Seleccione el รณ los niveles para obtener el listado con los recursos"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/seleccionChkInicial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <ImageView
                        android:id="@+id/imgEdInicial"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:src="@drawable/ed_inicial"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/seleccionChkPrimaria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <ImageView
                        android:id="@+id/imgEdPrimaria"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:src="@drawable/ed_primaria"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/seleccionChkSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <ImageView
                        android:id="@+id/imgEdSecundaria"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:src="@drawable/ed_secundaria"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    <Button
        android:id="@+id/btnEntrarActivitySeleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@color/colorPrimary"
        android:onClick="ActivitySeleccionEntrar"
        android:padding="20dp"
        android:text="ENTRAR"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</android.support.design.widget.CoordinatorLayout>
